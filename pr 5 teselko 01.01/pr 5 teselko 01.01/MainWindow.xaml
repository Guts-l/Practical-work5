        <Button x:Name="multiplyByNumber" Content="Умножить на число" HorizontalAlignment="Left" Margin="20,139,0,0" VerticalAlignment="Top" Width="150" Click="multiplyByNumber_Click"/>
        <Button x:Name="checkEquality" Content="Проверить на равенство" HorizontalAlignment="Left" Margin="20,169,0,0" VerticalAlignment="Top" Width="150" Click="checkEquality_Click"/>
