        <TextBox x:Name="outputResult" HorizontalAlignment="Left" Margin="205,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="40" IsReadOnly="True"/>
        <Button x:Name="info" Content="О программе" HorizontalAlignment="Left" Margin="20,234,0,0" VerticalAlignment="Top" Width="100" Click="info_Click"/>
